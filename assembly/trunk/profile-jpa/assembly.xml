<assembly>

    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <!-- include assembly files -->
    <fileSets>
        <fileSet>
            <directory>src/main</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>        
    <dependencySets>
 
        <dependencySet>
            <includes>
                <include>org.codehaus.fabric3:fabric3-jpa-spi</include>
                <include>org.codehaus.fabric3:fabric3-jpa-hibernate</include>
                <include>org.codehaus.fabric3:fabric3-tx</include>
                <include>org.codehaus.fabric3:fabric3-tx-jotm</include>
             </includes>
            <outputDirectory>/extensions</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>javax.persistence:persistence-api</include>
                <include>geronimo-spec:geronimo-spec-jta</include>
                 <include>geronimo-spec:geronimo-spec-j2ee-connector</include>
             </includes>
            <outputDirectory>/host</outputDirectory>
        </dependencySet>
  </dependencySets>
    
</assembly>

