<!--
    Default system configuration for the launcher environment.

    $Rev: 322 $ $Date: 2007-06-30 00:01:13 +0100 (Sat, 30 Jun 2007) $
-->
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           name="org.fabric3.launcher.System"
           autowire="true">

    <!-- include physical deployment configuration -->
    <include name="org.fabric3.fabric.Common" scdlResource="org/fabric3/fabric/common.composite"/>
    
    <!-- include host services configuration -->
    <include name="org.fabric3.fabric.HostServices" scdlResource="org/fabric3/fabric/hostServices.composite"/>

    <!-- include exception formatters  -->
    <include name="org.fabric3.fabric.Formatters" scdlResource="org/fabric3/fabric/formatters.composite"/>

    <!-- include physical deployment configuration -->
    <include name="org.fabric3.fabric.Physical" scdlResource="org/fabric3/fabric/physical.composite"/>

    <!-- include loader configuration -->
    <include name="org.fabric3.fabric.Loader" scdlResource="org/fabric3/loader/loader.composite"/>

    <!-- include implementation processor configuration -->
    <include name="org.fabric3.fabric.Implementation" scdlResource="org/fabric3/fabric/implementation.composite"/>

    <!-- Java interface definition language -->
    <include name="org.fabric3.fabric.InterfaceJava" scdlResource="org/fabric3/fabric/interfaceJava.composite"/>

    <!-- include omposite implementation type -->
    <include name="org.fabric3.fabric.Composite" scdlResource="org/fabric3/fabric/composite.composite"/>

    <!-- Pojo implementation type -->
    <include name="org.fabric3.fabric.PojoImplementation" scdlResource="org/fabric3/fabric/pojoImplementation.composite"/>

    <!-- System implementation type -->
    <include name="org.fabric3.fabric.SystemImplementation" scdlResource="org/fabric3/fabric/systemImplementation.composite"/>

    <!-- Java implementation type -->
    <include name="org.fabric3.fabric.JavaImplementation" scdlResource="org/fabric3/fabric/javaImplementation.composite"/>

    <!-- include deployment configuration -->
    <include name="org.fabric3.fabric.Deployment" scdlResource="org/fabric3/fabric/deployment.composite"/>
	 <include name="org.fabric3.fabric.ExtensionsDeployment" scdlResource="org/fabric3/fabric/extensionsDeployment.composite"/>

    <!-- include transform configuration -->
    <include name="org.fabric3.transform.Transform" scdlResource="org/fabric3/transform/transform.composite"/>

    <component name="launchedLoader">
        <system:implementation.system class="org.fabric3.runtime.standalone.host.implementation.launched.LaunchedLoader"/>
    </component>

    <component name="launchedComponentLoader">
        <system:implementation.system class="org.fabric3.runtime.standalone.host.implementation.launched.LaunchedComponentTypeLoaderImpl"/>
    </component>

    <component name="wiringExceptionFormatter">
        <system:implementation.system class="org.fabric3.fabric.builder.WiringExceptionFormatter"/>
    </component>

    <component name="assemblyRecoveryService">
        <system:implementation.system class="org.fabric3.fabric.assembly.store.AssemblyStoreImpl"/>
    </component>

	 <!-- the following entries will be loaded as normal extensions in the next release -->
    <!-- JXTA Network Configurator -->
    <component name="jxtaNetworkConfigurator">
        <system:implementation.system class="net.jxta.platform.NetworkConfigurator"/>
        <property name="password">test-password</property>
        <property name="principal">test-principal</property>
    </component>

    <!-- JXTA Service -->
    <component name="JxtaService">
        <system:implementation.system class="org.fabric3.jxta.impl.JxtaServiceImpl"/>
        <property name="tcpPort">2000</property>
    </component>

    <!-- JXTA Messaging Service -->
    <component name="MessagingService">
        <system:implementation.system class="org.fabric3.messaging.jxta.JxtaMessagingService"/>
    </component>

    <!-- JXTA Messaging Service -->
    <component name="MessageDestinationService">
        <system:implementation.system class="org.fabric3.messaging.jxta.JxtaMessageDestinationService"/>
    </component>

    <!-- JXTA Discovery Service -->
    <component name="DiscoveryService">
        <system:implementation.system class="org.fabric3.discovery.jxta.JxtaDiscoveryService"/>
    </component>

    <!-- scanner infrastructure -->
	     <component name="ContributionDirectoryScanner">
        <system:implementation.system class="org.fabric3.scanner.scanner.ContributionDirectoryScanner"/>
        <reference name="assembly" target="distributedAssembly"/>
    </component>

    <component name="FileSystemResourceFactoryRegistry">
        <system:implementation.system class="org.fabric3.scanner.scanner.FileSystemResourceFactoryRegistryImpl"/>
        <property name="path">target/deployables</property>
    </component>

    <component name="JarResourceFactory">
        <system:implementation.system class="org.fabric3.scanner.scanner.factory.JarResourceFactory"/>
    </component>
    
    <component name="ExplodedJarResourceFactory">
        <system:implementation.system class="org.fabric3.scanner.scanner.factory.ExplodedJarResourceFactory"/>
    </component>

	 <!-- END the following entries will be loaded as normal extensions in the next release -->

</composite>
