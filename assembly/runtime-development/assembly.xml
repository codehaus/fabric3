<assembly>
    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <files>
        <!-- include legal and other files -->
        <file>
            <source>LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>NOTICE.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <fileSets>
        <!-- include assembly files -->
        <fileSet>
            <directory>src/main/assembly</directory>
            <outputDirectory>/system</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <!-- copy dependencies used by the executable commands to the lib directory -->
        <dependencySet>
            <includes>
                <include>org.codehaus.fabric3.development:development-api</include>
                <include>org.codehaus.fabric3.spec:sca-api-r1.0</include>
                <include>org.codehaus.fabric3:fabric3-api</include>
                <include>org.codehaus.fabric3:fabric3-host-api</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>${artifactId}-${baseVersion}.${extension}</outputFileNameMapping>
        </dependencySet>

        <dependencySet>
            <includes>
                <include>org.codehaus.fabric3.development:development-host</include>
                <include>org.codehaus.woodstox:wstx-asl</include>
                <include>org.apache.tuscany:commonj-api_r1.1</include>
            </includes>
            <excludes>
                <exclude>org.codehaus.fabric3.development:development-api</exclude>
            </excludes>
            <outputDirectory>boot</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>

