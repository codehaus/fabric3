<config>
    <runtime domain="myDomain" mode="participant" monitor.level="INFO" jmx.port="7100-7199"/>
    <web.server>
        <http port="8010-8019"/>
    </web.server>
    <thread.pool size="500" coreSize="500"/>
    <jms>
        <active.mq>
            <networkConnectors>
                <networkConnector uri="multicast://default"/>
            </networkConnectors>
            <transportConnectors>
                <transportConnector name="openwire" uri="tcp://localhost:61616"/>
            </transportConnectors>
        </active.mq>
        <connection.factories>
            <connection.factory name="xaDefault" type="xa"/>
            <connection.factory name="default" type="local"/>
        </connection.factories>
        <binding.sca factory="default" xa.factory="xaDefault"/>
    </jms>
    <federation logging="severe">
        <transport>
            <value>
                <entry>
                    <key>http</key>
                    <value>localhost:8181</value>
                </entry>
            </value>
        </transport>
        <zoneName>zone1</zoneName>
    </federation>
