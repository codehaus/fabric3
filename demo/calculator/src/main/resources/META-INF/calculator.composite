<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:fabric3="http://fabric3.org/xmlns/sca/2.0-alpha"
           xmlns:hessian="http://www.fabric3.org/binding/hessian/0.1"
           xmlns:burlap="http://www.fabric3.org/binding/burlap/0.1"
           name="CalculatorComposite"
           autowire="true">

    <service name="calculatorOnHessian" promote="calculator">
        <interface.java interface="calculator.CalculatorService"/>
        <hessian:binding.hessian uri="/calculatorHessian" />
    </service>

    <service name="calculatorOnBurlap" promote="calculator">
        <interface.java interface="calculator.CalculatorService"/>
        <burlap:binding.burlap uri="/calculatorBurlap" />
    </service>
	 
    <service name="calculatorOnWS" promote="calculator">
        <interface.java interface="calculator.CalculatorService"/>
        <binding.ws uri="/calculatorWs" />
    </service>

   <service name="calculatorOnJMS" promote="calculator">
       <interface.java interface="calculator.CalculatorService"/>
        <binding.jms
            correlationScheme="RequestMsgIDToCorrelID"
            jndiURL="vm://localhost"
            initialContextFactory="org.apache.activemq.jndi.ActiveMQInitialContextFactory">
            <destination name="serviceQueue" type="queue" create="always"/>
            <connectionFactory name="QueueConnectionFactory" create="never"/>
            <response>
                <destination name="clientQueue" type="queue" create="always"/>
                <connectionFactory name="QueueConnectionFactory" create="never"/>
            </response>
        </binding.jms>
   </service>
   
    <component name="calculator">
        <implementation.java class="calculator.CalculatorServiceImpl"/>
    </component>

    <component name="adder">
        <implementation.java class="calculator.AddServiceImpl"/>
    </component>

    <component name="subtractor">
        <implementation.java class="calculator.SubtractServiceImpl"/>
    </component>

    <component name="multiplier">
        <implementation.java class="calculator.MultiplyServiceImpl"/>
    </component>

    <component name="divider">
        <implementation.java class="calculator.DivideServiceImpl"/>
    </component>
</composite>
