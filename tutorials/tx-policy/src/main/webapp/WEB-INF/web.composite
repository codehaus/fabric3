<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:fabric3="http://fabric3.org/xmlns/sca/2.0-alpha"
           name="Demo Web Client">

    <component name="catalogWebapp">
        <fabric3:web>
            <reference name="catalogReference" interface="tx.catalogService" target="catalog"/>
        </fabric3:web>
    </component>

    <reference name="catalogReference" promote="catalogWebapp/catalogReference" target="catalog">
        <interface.java interface="tx.CatalogService"/>
    </reference>

    <component name="catalog">
        <implementation.java class="tx.CatalogServiceImpl" requires="managedTransaction"/>
        <property name="dataSourceName">productDb</property>
    </component>
    
</composite>
