<assembly>
<!-- 
   
   Assembly that creates runtime images for the tutorials. This includes:
   
       - A controller
       - Two zone clusters
       - JPA, messaging (JMS and ActiveMQ), web application, and REST profiles
   
   This assembly can be used as a template for creating custom Fabrc3 images. 

-->
    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>dir</format>
        <!-- uncomment to create a zip archive of the Fabric3 controller and zone clusters -->
        <!-- <format>zip</format> -->
    </formats>
    <fileSets>
        <!-- setup controller -->
        <fileSet>
            <directory>target/image</directory>
            <outputDirectory>/controller</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <!-- setup zone1 -->
        <fileSet>
            <directory>target/image</directory>
            <outputDirectory>/zone1</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>src/main/datasource</directory>
            <outputDirectory>/zone1/extensions/datasource</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <!-- setup zone2 -->
        <fileSet>
            <directory>target/image</directory>
            <outputDirectory>/zone2</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>src/main/datasource</directory>
            <outputDirectory>/zone2/extensions/datasource</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
    
    <!-- copy configuration files for controller, zone1, and zone2-->
    <files>
        <file>
            <source>src/main/config/vmConfig.xml</source>
            <outputDirectory>controller/config/vm</outputDirectory>
            <destName>systemConfig.xml</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>src/main/config/vmConfig.xml</source>
            <outputDirectory>zone1/config/vm</outputDirectory>
            <destName>systemConfig.xml</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>src/main/config/participant1Config.xml</source>
            <outputDirectory>zone1/config/participant</outputDirectory>
            <destName>systemConfig.xml</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>src/main/config/vmConfig.xml</source>
            <outputDirectory>zone2/config/vm</outputDirectory>
            <destName>systemConfig.xml</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>src/main/config/participant2Config.xml</source>
            <outputDirectory>zone2/config/participant</outputDirectory>
            <destName>systemConfig.xml</destName>
            <fileMode>0644</fileMode>
        </file>
    </files>

</assembly>

