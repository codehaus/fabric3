<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codehaus.fabric3.tutorials</groupId>
        <artifactId>fabric3-tutorials-parent-pom</artifactId>
        <version>1.0</version>
    </parent>
    <groupId>org.codehaus.fabric3.tutorials</groupId>
    <artifactId>fabric3-tutorial-server</artifactId>
    <version>1.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Fabric3 Server Assembly</name>
    <description>Creates Fabric3 server images for the tutorials.</description>

    <dependencies>
        <dependency>
            <groupId>org.codehaus.fabric3</groupId>
            <artifactId>runtime-standalone</artifactId>
            <version>1.1-SNAPSHOT</version>
            <classifier>bin</classifier>
            <type>zip</type>
            <exclusions>
               <exclusion>
                    <groupId>com.sun.shoal</groupId>
                    <artifactId>shoal-gms</artifactId>
                </exclusion>
               <exclusion>
                    <groupId>com.sun.shoal</groupId>
                    <artifactId>shoal-jxta</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        
        <!-- JPA support -->
        <dependency>
            <groupId>org.codehaus.fabric3</groupId>
            <artifactId>profile-jpa</artifactId>
            <version>1.1-SNAPSHOT</version>
            <classifier>bin</classifier>
            <type>zip</type>
        </dependency>

        <!-- Messaging support -->
        <dependency>
            <groupId>org.codehaus.fabric3</groupId>
            <artifactId>profile-jms</artifactId>
            <version>1.1-SNAPSHOT</version>
            <classifier>bin</classifier>
            <type>zip</type>
        </dependency>

        <!-- Web application support -->
        <dependency>
            <groupId>org.codehaus.fabric3</groupId>
            <artifactId>profile-web</artifactId>
            <version>1.1-SNAPSHOT</version>
            <classifier>bin</classifier>
            <type>zip</type>
        </dependency>

    </dependencies>
    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <classifier>bin</classifier>
                            <type>zip</type>
                            <excludeTransitive>true</excludeTransitive>
                            <outputDirectory>${project.build.directory}/image</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
              </configuration>
            </plugin>
        </plugins>
    </build>
</project>
