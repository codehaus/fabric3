           xmlns:burlap="http://www.fabric3.org/binding/burlap/0.2"
          name="Demo Web Client">

    <component name="loanapp">
        <implementation.web/>
        <reference name="loanService" promote="loanapp/loanService">
            <interface.java interface="loanapp.loanservice.LoanApplicationService"/>
            <!--<binding.rmi host="localhost" port="7701" serviceName="loanService"/>-->
            <hessian:binding.hessian uri="http://localhost:8181/loanServiceHessian"/>
            <!--<burlap:binding.burlap uri="http://localhost:8181/loanServiceBurlap"/>-->
            <!--<binding.ws uri="http://localhost:8181/services/loanService"/>-->
        </reference>
    </component>


    <!--
        Hessian Binding:
