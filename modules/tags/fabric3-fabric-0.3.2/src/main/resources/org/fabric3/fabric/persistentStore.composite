<!--
    Stores configured for persistent storage

    TODO JFM: this should be combined with nonPersistentStore and have persistent values set in a property on the domain

    $Rev: 881 $ $Date: 2007-08-27 13:12:34 -0700 (Mon, 27 Aug 2007) $
-->
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           name="org.fabric3.fabric.PersistentStore"
           autowire="true">
    <component name="ContributionStore">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ContributionStoreImpl"/>
        <property name="persistent">true</property>
    </component>

    <component name="MetadataStore">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.MetaDataStoreImpl"/>
        <property name="persistent">true</property>
    </component>

    <component name="DefinitionsContributionStore">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ContributionStoreImpl"/>
        <property name="storeId">definitions</property>
        <property name="persistent">false</property>
    </component>


</composite>