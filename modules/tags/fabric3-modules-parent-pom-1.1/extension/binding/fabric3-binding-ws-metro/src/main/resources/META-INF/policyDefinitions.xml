<definitions xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
             xmlns:f3-policy="urn:fabric3.org:policy"
             targetNamespace="urn:fabric3.org:policy">

    <intent name="messageOptimisation" constrains="binding">
        <description>
            Optimise transfer of binary files.
        </description>
    </intent>

    <intent name="protocolBinding" constrains="binding">
        <description>
            Unqualified intent for using SOAP 1.1, SOAP 1.2, HTTP etc.
        </description>
    </intent>

    <intent name="protocolBinding.soap11" constrains="binding">
        <description>
            Qualified intent for using SOAP 1.1.
        </description>
    </intent>

    <intent name="protocolBinding.soap12" constrains="binding">
        <description>
            Unqualified intent for using SOAP 1.2.
        </description>
    </intent>

    <intent name="protocolBinding.rest" constrains="binding">
        <description>
            Unqualified intent for using HTTP.
        </description>
    </intent>

    <intent name="validateSchema">
        <description>
            Intent for requesting schema validation.
        </description>
    </intent>

</definitions>