<!--
    Deployment-related system components
    
    $Rev$ $Date$
-->
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           name="org.fabric3.fabric.Deployment"
           autowire="true">

    <!-- Content type resolver -->
    <component name="contentTypeResolver">
        <system:implementation.system class="org.fabric3.fabric.services.contenttype.ExtensionMapContentTypeResolver"/>
        <property name="extensionMap">
            <xml>application/xml</xml>
            <composite>text/vnd.fabric3.composite+xml</composite>
            <zip>application/zip</zip>
            <jar>application/zip</jar>
            <definitions>text/vnd.fabric3.definitions+xml</definitions>
        </property>
    </component>

    <!-- Contribution Service -->
    <component name="ContributionService">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ContributionServiceImpl"/>
    </component>

    <component name="ContributionProcessorRegistry">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ProcessorRegistryImpl"/>
    </component>

    <component name="ZipContributionProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.ZipContributionProcessor"/>
        <reference name="metaDataStore" target="MetadataStore"/>
    </component>

    <component name="XmlResourceProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.XmlResourceProcessor"/>
    </component>

    <component name="CompositeResourceProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.CompositeResourceProcessor"/>
    </component>

    <component name="FolderContributionProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.ExplodedArchiveContributionProcessor"/>
        <reference name="metaDataStore" target="MetadataStore"/>
    </component>

    <component name="XmlContributionProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.XmlContributionProcessor"/>
    </component>

    <component name="DefinitionsProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.DefinitionsProcessor"/>
        <reference name="loader" target="loader.definitions"/>
    </component>

    <component name="ContributionElementLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.ContributionElementLoader"/>
    </component>

    <component name="QNameExportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.QNameExportLoader"/>
    </component>

    <component name="QNameImportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.QNameImportLoader"/>
    </component>

    <component name="JavaExportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.JavaExportLoader"/>
    </component>

    <component name="JavaImportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.JavaImportLoader"/>
    </component>


</composite>
