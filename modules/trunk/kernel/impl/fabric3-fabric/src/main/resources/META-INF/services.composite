<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           targetNamespace="urn:maven:org.codehaus.fabric3:boot"
           name="HostServicesComposite"
           autowire="true">

    <component name="XMLFactory">
        <f3-impl:implementation.system class="org.fabric3.fabric.services.xml.XMLFactoryImpl"/>
        <property name="input">com.ctc.wstx.stax.WstxInputFactory</property>
        <property name="output">com.ctc.wstx.stax.WstxOutputFactory</property>
    </component>

    <component name="EventService">
        <f3-impl:implementation.system class="org.fabric3.fabric.services.event.EventServiceImpl"/>
    </component>

    <component name="ContentTypeResolver">
        <f3-impl:implementation.system class="org.fabric3.fabric.services.contenttype.ExtensionMapContentTypeResolver"/>
        <property name="extensionMap">
            <xml>application/xml</xml>
            <composite>text/vnd.fabric3.composite+xml</composite>
            <zip>application/zip</zip>
            <jar>application/zip</jar>
            <definitions>text/vnd.fabric3.definitions+xml</definitions>
            <wsdl>text/wsdl+xml</wsdl>
        </property>
    </component>
    
</composite>
