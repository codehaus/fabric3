<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:f3="http://fabric3.org/xmlns/sca/2.0-alpha"
           xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           targetNamespace="org.codehaus.fabric3"
           name="JMSBindingExtension">
           
    <!-- JMS Transaction Handler -->
    <component name="JMSTransactionHandler" f3:key="LOCAL">
        <system:implementation.system class="org.fabric3.binding.jms.tx.JmsTransactionHandler"/>
    </component>
           
    <!-- JTA Transaction Handler -->
    <component name="JTATransactionHandler" f3:key="GLOBAL">
        <system:implementation.system class="org.fabric3.binding.jms.tx.JtaTransactionHandler"/>
    </component>

    <!-- JMS Host -->
    <component name="JMSHost">
        <system:implementation.system class="org.fabric3.binding.jms.host.standalone.StandaloneJmsHost"/>
    </component>

    <!-- JMS Binding Loader -->
    <component name="JMSBindingLoader">
        <system:implementation.system class="org.fabric3.binding.jms.model.logical.JmsBindingLoader"/>
    </component>

    <!-- JMS Binding Generator -->
    <component name="JmsBindingGenerator">
        <system:implementation.system class="org.fabric3.binding.jms.model.physical.JmsBindingGenerator"/>
    </component>

    <!-- JMS Wire Attacher -->
    <component name="JmsWireAttacher">
        <system:implementation.system class="org.fabric3.binding.jms.wire.JmsWireAttacher"/>
        <property name="receiverThreads">10</property>
        <!-- TODO Fix this when maps are enabled in the system tree -->
        <!-- reference name="transactionHandlers" target="JMSTransactionHandler JTATransactionHandler" multiplicity="0..n"/-->
        <reference name="jmsTransactionHandler" target="JMSTransactionHandler"/>
        <reference name="jtaTransactionHandler" target="JTATransactionHandler"/>
    </component>

    <!-- Feature -->
    <system:feature name="JmsBindingFeature">{http://fabric3.org/xmlns/binding}jms</system:feature>

</composite>