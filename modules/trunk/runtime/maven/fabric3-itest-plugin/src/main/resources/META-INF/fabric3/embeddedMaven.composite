<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           xmlns:introspection="urn:maven:org.codehaus.fabric3:fabric3-introspection"
           xmlns:boot="urn:maven:org.codehaus.fabric3:boot"
           name="MavenRuntimeComposite"
           autowire="true">

    <include name="ThreadPoolComposite" scdlResource="META-INF/threadPool.composite"/>

    <include name="PolicyComposite" scdlResource="org/fabric3/policy/policy.composite"/>

    <include name="FabricComposite" scdlResource="META-INF/fabric.composite"/>

    <include name="IntrospectionComposite" scdlResource="org/fabric3/introspection/introspection.composite"/>

    <include name="LoaderComposite" scdlResource="org/fabric3/loader/loader.composite"/>

    <include name="LocalProvisioningComposite" scdlResource="META-INF/localProvisioning.composite"/>

    <include name="TransformComposite" scdlResource="org/fabric3/transform/transform.composite"/>

    <include name="PojoImplementationComposite" scdlResource="org/fabric3/pojo/pojoImplementation.composite"/>

    <include name="SystemImplementationComposite" scdlResource="org/fabric3/system/systemImplementation.composite"/>

    <include name="SingletonImplementationComposite" scdlResource="org/fabric3/system/singletonImplementation.composite"/>

    <include name="JMXExtensionComposite" scdlResource="org/fabric3/jmx/jmx.composite"/>

    <component name="LogicalComponentStore">
        <f3-impl:implementation.system class="org.fabric3.fabric.services.lcm.ApplicationLogicalComponentStore"/>
        <property name="autowire" source="$systemConfig/domain/@autowire"/>
    </component>

</composite>
