<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.codehaus.fabric3</groupId>
        <artifactId>fabric</artifactId>
        <version>3</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.codehaus.fabric3</groupId>
    <artifactId>module-parent</artifactId>
    <version>2-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Fabric3 Fabric Modules Parent</name>
    <description>Parent POM defining settings for fabric modules.</description>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-release-plugin</artifactId>
                    <configuration>
                        <tagBase>https://svn.codehaus.org/fabric3/modules/tags</tagBase>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <scm>
        <connection>scm:svn:http://svn.codehaus.org/fabric3/modules/trunk/module-parent</connection>
        <developerConnection>scm:svn:https://svn.codehaus.org/fabric3/modules/trunk/module-parent</developerConnection>
        <url>http://svn.fabric3.codehaus.org/browse/fabric3/modules/trunk/module-parent</url>
    </scm>
</project>