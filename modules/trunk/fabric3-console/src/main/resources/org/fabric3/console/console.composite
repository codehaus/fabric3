<!--
    Servlets for the SCA console.
    
    $Rev$ $Date$
-->
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           name="org.apache.fabric3.sca.console"
           autowire="true">

    <!-- Servlet that serves the SCDL contribution form -->
    <component name="console.scdlRequestForm">
        <system:implementation.system class="org.fabric3.console.handler.scdl.ScdlContributionForm"/>
        <property name="path">/scdlForm</property>
    </component>

    <!-- Servlet that handles the scdl submission -->
    <component name="console.scdlHandler">
        <system:implementation.system class="org.fabric3.console.handler.scdl.ScdlContributionHandler"/>
        <property name="path">/scdlSubmit</property>
    </component>

    <component name="console.consoleServlet">
        <system:implementation.system class="org.fabric3.console.handler.scdl.ConsoleServlet"/>
        <property name="path">/console/*</property>
    </component>

</composite>