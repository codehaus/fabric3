<!--
    Deployment-related system components
    
    $Rev$ $Date$
-->
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           name="org.fabric3.fabric.Deployment"
           autowire="true">
    
    <!-- Content type resolver -->       
    <component name="contentTypeResolver">
        <system:implementation.system class="org.fabric3.fabric.services.contenttype.ExtensionMapContentTypeResolver"/>
    </component>

    <!-- Contribution Service -->
    <component name="ContributionService" initLevel="90">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ContributionServiceImpl"/>
    </component>

    <component name="ContributionStore" initLevel="40">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ContributionStoreImpl"/>
    </component>

    <component name="MetadataStore" initLevel="40">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.MetaDataStoreImpl"/>
    </component>

    <component name="JarService">
        <system:implementation.system class="org.fabric3.fabric.services.archive.JarServiceImpl"/>
    </component>

    <component name="ContributionProcessorRegistry">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ProcessorRegistryImpl"/>
    </component>
    
    <component name="JarContributionProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.JarContributionProcessor"/>
    </component>

    <component name="CompositeResourceProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.CompositeResourceProcessor"/>
    </component>

    <component name="DefinitionsContributionProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.DefinitionsContributionProcessor"/>
    </component>

    <component name="FolderContributionProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.ExplodedJarContributionProcessor"/>
    </component>

    <component name="ClasspathProcessorRegistry">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.ClasspathProcessorRegistryImpl"/>
    </component>

    <component name="JarClasspathProcessor">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.processor.JarClasspathProcessor"/>
    </component>

    <component name="ContributionElementLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.ContributionElementLoader"/>
    </component>

    <component name="QNameExportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.QNameExportLoader"/>
    </component>

    <component name="QNameImportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.QNameImportLoader"/>
    </component>

    <component name="JavaExportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.JavaExportLoader"/>
    </component>

    <component name="JavaImportLoader">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.manifest.JavaImportLoader"/>
    </component>

    <component name="ArtifactResolverRegistry">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.ArtifactResolverRegistryImpl"/>
    </component>

    <component name="FSArtifactLocationEncoder">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.FSArtifactLocationEncoder"/>
    </component>

    <component name="FileSystemResolver">
        <system:implementation.system
                class="org.fabric3.fabric.services.contribution.FileSystemResolver"/>
    </component>

    <!-- Directory Scanner infrastructure -->
    <component name="ContributionDirectoryScanner" initLevel="100">
        <system:implementation.system class="org.fabric3.fabric.services.scanner.ContributionDirectoryScanner"/>
        <property name="path">target/deployables</property>
    </component>

    <component name="FileSystemResourceFactoryRegistry">
        <system:implementation.system class="org.fabric3.fabric.services.scanner.FileSystemResourceFactoryRegistryImpl"/>
        <property name="path">target/deployables</property>
    </component>

    <component name="JarResourceFactory">
        <system:implementation.system class="org.fabric3.fabric.services.scanner.factory.JarResourceFactory"/>
    </component>
    
    <component name="ExplodedJarResourceFactory">
        <system:implementation.system class="org.fabric3.fabric.services.scanner.factory.ExplodedJarResourceFactory"/>
    </component>

    <component name="DefinitionsContributionStore">
        <system:implementation.system class="org.fabric3.fabric.services.contribution.ContributionStoreImpl"/>
        <property name="storeId">definitions</property>
        <property name="persistent">false</property>
    </component>

</composite>
