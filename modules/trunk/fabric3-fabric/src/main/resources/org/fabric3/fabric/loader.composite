<!--
    Default loader configuration for the launcher environment.
    
    $Rev$ $Date$
-->
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           name="org.fabric3.fabric.Loader"
           autowire="true">

    <!-- Loader and LoaderRegistry -->
    <component name="loader">
        <system:implementation.system class="org.fabric3.fabric.loader.LoaderRegistryImpl"/>
    </component>

    <!-- Common SCDL loader implementations -->
    <component name="loader.Property">
        <system:implementation.system class="org.fabric3.loader.common.PropertyLoader"/>
    </component>

    <!-- Composite SCDL loader implementations -->
    <component name="loader.Include">
        <system:implementation.system class="org.fabric3.loader.composite.IncludeLoader"/>
    </component>
    <component name="loader.Composite">
        <system:implementation.system class="org.fabric3.loader.composite.CompositeLoader"/>
        <reference name="include" target="loader.Include"/>
        <reference name="property" target="loader.Property"/>
    </component>

    <component name="elementLoader.component">
        <system:implementation.system class="org.fabric3.fabric.loader.ComponentLoader"/>
    </component>
    <component name="elementLoader.componentType">
        <system:implementation.system class="org.fabric3.fabric.loader.ComponentTypeElementLoader"/>
    </component>
    <component name="elementLoader.reference">
        <system:implementation.system class="org.fabric3.fabric.loader.ReferenceLoader"/>
    </component>
    <component name="elementLoader.service">
        <system:implementation.system class="org.fabric3.fabric.loader.ServiceLoader"/>
    </component>
    <component name="elementLoader.wire">
        <system:implementation.system class="org.fabric3.fabric.loader.WireLoader"/>
    </component>

</composite>
