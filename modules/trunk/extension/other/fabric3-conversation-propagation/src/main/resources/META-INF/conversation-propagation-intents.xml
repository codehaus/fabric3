<?xml version="1.0" encoding="ASCII"?>
<definitions
        xmlns="http://www.osoa.org/xmlns/sca/1.0"
        xmlns:sca="http://www.osoa.org/xmlns/sca/1.0"
        xmlns:f3="http://fabric3.org/xmlns/sca/2.0-alpha"
        targetNamespace="http://fabric3.org/xmlns/sca/2.0-alpha">
    <!-- Propagates conversation is defined as an interaction intent that must be handled by the component impplementation type -->
    <intent name="propagatesConversation" constrains="binding">
        <description>
            Used to indicate a conversation is propagated through a reference.
        </description>
    </intent>

    <policySet name="propagatesConversationPolicy" provides="f3:propagatesConversation"/>

</definitions>