<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           targetNamespace="org.codehaus.fabric3"
           name="TxExtension"
           autowire="true">

    <!-- Tx Interceptor Builder -->
    <component name="TxInterceptorBuilder" f3-core:key="org.fabric3.tx.interceptor.TxInterceptorDefinition">
        <f3-impl:implementation.system class="org.fabric3.tx.interceptor.TxInterceptorBuilder"/>
    </component>

    <!-- Tx Interceptor Generator -->
    <component name="TxInterceptorGenerator" f3-core:key="{urn:fabric3.org:policy}transaction">
        <f3-impl:implementation.system class="org.fabric3.tx.interceptor.TxInterceptorDefinitionGenerator"/>
    </component>

</composite>