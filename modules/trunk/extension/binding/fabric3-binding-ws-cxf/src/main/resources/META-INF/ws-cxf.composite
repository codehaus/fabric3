<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:f3="http://fabric3.org/xmlns/sca/2.0-alpha"
           xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           targetNamespace="org.codehaus.fabric3"
           name="CXFWebServicesBindingExtension">
    <!--
        Ws Wire Attacher
        This must come first as it is responsible for initializing CXF's StAXUtil class
        which caches the XMLInputFactory implementation from the TCCL.
    -->
    <component name="CxfWireAttacher">
        <system:implementation.system class="org.fabric3.binding.ws.cxf.wire.CxfWireAttacher"/>
        <!--<property name="contextPath">/services/*</property>-->
    </component>

    <component name="CXFService">
        <system:implementation.system class="org.fabric3.binding.ws.cxf.CXFServiceImpl"/>
        <property name="contextPath">/services/*</property>
    </component>

    <!-- Ws Binding Generator -->
    <component name="CxfDelegate" f3:key="cxf">
        <system:implementation.system class="org.fabric3.binding.ws.cxf.physical.CxfBindingGeneratorDelegate"/>
    </component>

    <!-- Feature -->
    <system:feature name="WsBindingFeature">{http://fabric3.org/xmlns/binding}ws-cxf</system:feature>

</composite>
