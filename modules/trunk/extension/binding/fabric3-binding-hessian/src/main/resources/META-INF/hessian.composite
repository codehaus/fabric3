<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:f3="http://fabric3.org/xmlns/sca/2.0-alpha"
           xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           targetNamespace="org.codehaus.fabric3"
           name="HessianBindingExtension">

    <!-- Hessian Binding Loader -->
    <component name="HessianBindingLoader">
        <system:implementation.system class="org.fabric3.binding.hessian.model.logical.HessianBindingLoader"/>
    </component>

    <!-- Hessian Binding Generator -->
    <component name="HessianBindingGenerator" f3:key="org.fabric3.binding.hessian.model.logical.HessianBindingDefinition">
        <system:implementation.system class="org.fabric3.binding.hessian.model.physical.HessianBindingGenerator"/>
    </component>

    <!-- Hessian Wire Attachers -->
    <component name="org.fabric3.binding.hessian.wire.HessianSourceWireAttacher">
        <system:implementation.system class="org.fabric3.binding.hessian.wire.HessianSourceWireAttacher"/>
    </component>
    <component name="org.fabric3.binding.hessian.wire.HessianTargetWireAttacher">
        <system:implementation.system class="org.fabric3.binding.hessian.wire.HessianTargetWireAttacher"/>
    </component>

    <!-- Feature -->
    <system:feature name="HessianBindingFeature">{http://fabric3.org/xmlns/binding}hessian</system:feature>

</composite>
