<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           xmlns:f3-core="urn:fabric3.org:core"
           name="Axis2TestComposite">

    <include name="Axis2JaxbTest"/>

    <component name="EchoTest">
        <f3-impl:junit class="org.fabric3.tests.binding.axis2.Axis2EchoTest"/>
        <reference name="service">
            <binding.ws uri="http://localhost:8900/axis2/echoService"/>
            <operation name="echoWsUsernameToken" requires="sca:authentication.message"/>
            <operation name="echoWsX509Token" requires="sca:authentication.message"/>
        </reference>
        <reference name="faultService">
            <binding.ws uri="http://localhost:8900/axis2/faultService">
                <config>
                    <parameter name="enableMTOM">false</parameter>
                </config>
            </binding.ws>
        </reference>
    </component>

    <component name="EchoService">
        <implementation.java class="org.fabric3.tests.binding.axis2.Axis2EchoServiceImpl"/>
        <service name="Axis2EchoService">
            <binding.ws uri="echoService"/>
            <operation name="echoWsUsernameToken" requires="sca:authentication.message"/>
            <operation name="echoWsX509Token" requires="sca:authentication.message"/>
        </service>
    </component>

    <component name="FaultService">
        <implementation.java class="org.fabric3.tests.binding.axis2.Axis2FaultServiceImpl"/>
        <service name="Axis2FaultService">
            <binding.ws uri="faultService"/>
        </service>
    </component>

</composite>