<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:f3="http://fabric3.org/xmlns/sca/2.0-alpha"
           name="OuterComposite">

    <component name="Inner">
        <implementation.composite name="inner" scdlLocation="inner.composite"/>
        <property name="ids">
            <one xmlns="">innerOne</one>
        </property>
    </component>

    <component name="Inner2">
        <implementation.composite name="inner2" scdlLocation="inner2.composite"/>
        <service name="SourceService">
            <f3:binding.test uri="SourceService"/>
        </service>
        <reference name="promoted" target="target"/>
    </component>

<!--
    <component name="InnerInner">
        <implementation.composite name="ImplementInnerComposite" scdlLocation="implement/inner.composite"/>
    </component>
-->

    <component name="InnerCompositeTest">
        <f3:junit class="org.fabric3.tests.function.composite.InnerCompositeTest"/>
        <reference name="inner" target="Inner"/>
        <reference name="innerSpecified" target="Inner2/two"/>
        <reference name="boundSource">
            <f3:binding.test uri="SourceService"/>
        </reference>
    </component>
    
    <component name="target">
            <implementation.java name="target" class="org.fabric3.tests.function.common.TargetImpl"/>
    </component>

    <component name="InnerIncluder">
        <implementation.composite name="InnerIncluderComposite" scdlLocation="include/innerIncluder.composite"/>
    </component>

    <component name="Autowire">
        <implementation.composite name="Autowire" scdlLocation="autowire.composite"/>
    </component>
</composite>
