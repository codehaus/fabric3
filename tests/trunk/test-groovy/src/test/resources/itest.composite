<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           xmlns:groovy="http://www.fabric3.org/xmlns/groovy/1.0"
           name="GroovyTestHarnessComposite">

    <component name="TestClient">
        <f3-impl:junit class="tests.groovy.TestClient"/>
        <reference name="service" target="Echo"/>
    </component>

    <component name="Echo">
        <groovy:groovy script="tests/groovy/EchoImpl.groovy"/>
        <property name="message">Hello</property>
        <reference name="java" target="Java"/>
    </component>

    <component name="Java">
        <implementation.java class="tests.groovy.EchoJava"/>
    </component>
</composite>
