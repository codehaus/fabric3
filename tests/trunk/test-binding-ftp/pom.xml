<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codehaus.fabric3</groupId>
        <artifactId>fabric</artifactId>
        <version>5</version>
    </parent>
    <groupId>org.codehaus.fabric3.tests</groupId>
    <artifactId>test-binding-ftp</artifactId>
    <version>0.1-SNAPSHOT</version>
    <name>Fabric3 FTP Binding Test</name>
    <packaging>jar</packaging>
    <description>Fabric3 FTP Binding Test.</description>

    <dependencies>
        <dependency>
            <groupId>org.codehaus.fabric3.spec</groupId>
            <artifactId>sca-api-r1.0</artifactId>
            <version>0.5-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.fabric3</groupId>
            <artifactId>fabric3-api</artifactId>
            <version>1.2-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.apache.ws.commons.axiom</groupId>
            <artifactId>axiom-api</artifactId>
            <version>1.2.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>verify</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.codehaus.fabric3</groupId>
                <artifactId>fabric3-itest-plugin</artifactId>
                <version>1.2-SNAPSHOT</version>
                <configuration>
                    <runtimeVersion>1.2-SNAPSHOT</runtimeVersion>
                    <extensions>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-ftp-spi</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-ftp-server</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-binding-ftp</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-binding-ws</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-binding-ws-axis2</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>

                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-jaxb</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-jetty</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>javax.xml.ws</groupId>
                            <artifactId>com.springsource.javax.xml.ws</artifactId>
                            <version>2.1.1</version>
                        </dependency>
                        <dependency>
                            <groupId>javax.jws</groupId>
                            <artifactId>com.springsource.javax.jws</artifactId>
                            <version>2.0.0</version>
                        </dependency>
                        <dependency>
                            <groupId>javax.xml.soap</groupId>
                            <artifactId>com.springsource.javax.xml.soap</artifactId>
                            <version>1.3.0</version>
                        </dependency>

                    </extensions>
                    <systemConfig>
                        <![CDATA[
                        <config>
                            <web.server>
                                <http port="8900"/>
                            </web.server>
                            <ftp.server>
	                            <commandPort>2000</commandPort>
	                            <minPassivePort>6000</minPassivePort>
	                            <maxPassivePort>7000</maxPassivePort>
	                            <users>
	                                <meeraj>password</meeraj>
	                            </users>
                            </ftp.server>
                        </config>
                        ]]>
                    </systemConfig>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
