<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codehaus.fabric3</groupId>
        <artifactId>fabric</artifactId>
        <version>5</version>
    </parent>
    <groupId>org.codehaus.fabric3.tests</groupId>
    <artifactId>test-binding-jms</artifactId>
    <version>0.1-SNAPSHOT</version>
    <name>Fabric3 JMS Binding Test</name>
    <packaging>jar</packaging>
    <description>Fabric3 JMS Binding Test.</description>

    <dependencies>

        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>2.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.codehaus.fabric3.spec</groupId>
            <artifactId>sca-api-r1.0</artifactId>
            <version>0.4</version>
        </dependency>

        <dependency>
            <groupId>org.codehaus.fabric3</groupId>
            <artifactId>fabric3-binding-test-harness</artifactId>
            <version>1.2-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>

    </dependencies>

    <build>
        <defaultGoal>verify</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.codehaus.fabric3</groupId>
                <artifactId>fabric3-itest-plugin</artifactId>
                <version>1.2-SNAPSHOT</version>
                <configuration>
                    <runtimeVersion>1.2-SNAPSHOT</runtimeVersion>
                    <extensions>
                        <dependency>
                            <groupId>javax.jms</groupId>
                            <artifactId>com.springsource.javax.jms</artifactId>
                            <version>1.1.0</version>
                            <scope>provided</scope>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-binding-jms</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-activemq</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-jaxb</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-databinding-jaxb</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-tx-jotm</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-tx</artifactId>
                            <version>1.2-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>javax.transaction</groupId>
                            <artifactId>com.springsource.javax.transaction</artifactId>
                            <version>1.1.0</version>
                        </dependency>
                        <dependency>
                            <groupId>javax.resource</groupId>
                            <artifactId>com.springsource.javax.resource</artifactId>
                            <version>1.5.0</version>
                        </dependency>
                    </extensions>
                    <systemConfig>
                        <![CDATA[
                               <config>
                                  <thread.pool size="100"/>
                                  <jms>
                                      <connection.factories>
                                        <connection.factory name="xaDefault" broker.url="vm://broker" type="xa"/>
                                        <connection.factory name="default" broker.url="vm://broker"/>
                                      </connection.factories>
                                  </jms>
                               </config>
                               ]]>
                    </systemConfig>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>activemq-data</directory>
                            <includes>
                                <include>**/**</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
