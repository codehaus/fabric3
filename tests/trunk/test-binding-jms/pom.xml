<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codehaus.fabric3</groupId>
        <artifactId>fabric</artifactId>
        <version>4</version>
    </parent>
    <groupId>org.codehaus.fabric3.tests</groupId>
    <artifactId>test-binding-jms</artifactId>
    <version>0.1-SNAPSHOT</version>
    <name>Fabric3 JMS Binding Test</name>
    <packaging>jar</packaging>
    <description>Fabric3 JMS Binding Test.</description>

    <dependencies>

        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>2.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.codehaus.fabric3.spec</groupId>
            <artifactId>sca-api-r1.0</artifactId>
            <version>0.2.1</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>

    </dependencies>

    <build>
        <defaultGoal>verify</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.codehaus.fabric3</groupId>
                <artifactId>fabric3-itest-plugin</artifactId>
                <version>0.6-SNAPSHOT</version>
                <configuration>
                    <runtimeVersion>0.6-SNAPSHOT</runtimeVersion>
                    <extensions>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-binding-jms</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-jaxb</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-databinding-jaxb-provision</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-databinding-jaxb-loader</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-databinding-jaxb-runtime</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-tx-jotm</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-tx</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-async-provision</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-async-loader</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-async-runtime</artifactId>
                            <version>0.6-SNAPSHOT</version>
                        </dependency>
                    </extensions>
                    <shared>
                        <dependency>
                            <groupId>geronimo-spec</groupId>
                            <artifactId>geronimo-spec-jms</artifactId>
                            <version>1.1-rc4</version>
                        </dependency>
                        <dependency>
                            <groupId>geronimo-spec</groupId>
                            <artifactId>geronimo-spec-jta</artifactId>
                            <version>1.0.1B-rc4</version>
                        </dependency>
                        <dependency>
                            <groupId>geronimo-spec</groupId>
                            <artifactId>geronimo-spec-j2ee-connector</artifactId>
                            <version>1.5-rc4</version>
                        </dependency>
                        <dependency>
                            <groupId>org.apache.activemq</groupId>
                            <artifactId>activemq-core</artifactId>
                            <version>4.1.1</version>
                        </dependency>
                        <dependency>
                            <groupId>javax.xml.bind</groupId>
                            <artifactId>jaxb-api</artifactId>
                            <version>2.1</version>
                        </dependency>
                    </shared>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>activemq-data</directory>
                            <includes>
                                <include>**/**</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
