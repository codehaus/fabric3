<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-binding="urn:fabric3.org:binding"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           name="JMSCallbackComposite" autowire="false">

    <component name="AsyncCallbackTest">
        <f3-impl:junit class="org.fabric3.tests.binding.harness.callback.AsyncCallbackTest"/>
        <reference name="client" target="AsyncClientService/AsyncClientService"/>
    </component>

    <component name="AsyncClientService">
        <implementation.java class="org.fabric3.tests.binding.harness.callback.AsyncClientServiceImpl"/>
        <reference name="service">
            <binding.jms>
                <destination name="asyncClientServiceQueue" type="queue" create="always"/>
                <connectionFactory name="org.apache.activemq.ActiveMQConnectionFactory" create="always">
                    <property name="brokerURL">vm://broker</property>
                </connectionFactory>
            </binding.jms>
            <callback>
                <binding.jms>
                    <destination name="asyncClientServiceCallbackQueue" type="queue" create="always"/>
                    <connectionFactory name="org.apache.activemq.ActiveMQConnectionFactory" create="always">
                        <property name="brokerURL">vm://broker</property>
                    </connectionFactory>
                </binding.jms>
            </callback>
        </reference>
    </component>

    <component name="AsyncForwardService">
        <implementation.java class="org.fabric3.tests.binding.harness.callback.AsyncForwardServiceImpl"/>
        <service name="AsyncForwardService">
            <binding.jms>
                <destination name="asyncClientServiceQueue" type="queue" create="always"/>
                <connectionFactory name="org.apache.activemq.ActiveMQConnectionFactory" create="always">
                    <property name="brokerURL">vm://broker</property>
                </connectionFactory>
            </binding.jms>
            <callback>
                <binding.jms>
                    <destination name="asyncClientServiceCallbackQueue" type="queue" create="always"/>
                    <connectionFactory name="org.apache.activemq.ActiveMQConnectionFactory" create="always">
                        <property name="brokerURL">vm://broker</property>
                    </connectionFactory>
                </binding.jms>
            </callback>
        </service>
    </component>


</composite>
