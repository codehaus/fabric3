<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-binding="urn:fabric3.org:binding"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           name="SyncAsyncComposite" autowire="false">

    <!-- JSON tests -->
    <component name="EchoTest">
        <f3-impl:junit class="org.fabric3.tests.binding.harness.EchoTest"/>
        <reference name="service" target="EchoService">
            <binding.http uri="/echoService">
                <wireFormat.json/>
            </binding.http>
        </reference>
    </component>


    <component name="EchoOneWayTest">
        <f3-impl:junit class="org.fabric3.tests.binding.harness.EchoOneWayTest"/>
        <reference name="service" target="OneWayEchoService">
            <binding.http uri="/oneWayEchoService">
                <wireFormat.json/>
            </binding.http>
        </reference>
    </component>

    <component name="EchoService">
        <implementation.java class="org.fabric3.tests.binding.harness.EchoServiceImpl"/>
        <service name="EchoService">
            <binding.http uri="/echoService">
                <wireFormat.json/>
            </binding.http>
        </service>
    </component>

    <component name="OneWayEchoService">
        <implementation.java class="org.fabric3.tests.binding.harness.OneWayEchoServiceImpl"/>
        <service name="OneWayEchoService">
            <binding.http uri="/oneWayEchoService">
                <wireFormat.json/>
            </binding.http>
        </service>
    </component>
    <!-- end JSON tests -->
</composite>
