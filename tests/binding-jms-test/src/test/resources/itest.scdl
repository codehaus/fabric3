<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:f3="http://fabric3.org/xmlns/sca/2.0-alpha"
           name="BurlapTestComposite">

    <service name="HelloBurlapService" promote="HelloService">
        <interface.java interface="org.fabric3.binding.burlap.HelloService"/>
        <binding.jms 
            correlationScheme="RequestMsgIDToCorrelID" 
            jndiUrl="vm://localhost" 
            initialContextFactory="org.apache.activemq.jndi.ActiveMQInitialContextFactory">
            <destination name="serviceQueue" type="queue" create="never"/>
            <connectionFactory name="connectionFactory" create="never"/>
            <response>
                <destination name="clientQueue" type="queue" create="never"/>
                <connectionFactory name="connectionFactory" create="never"/>
            </response>
        </binding.jms>
    </service>

    <reference name="HelloBurlapReference" promote="HelloClient/helloService">
        <interface.java interface="org.fabric3.binding.burlap.HelloService"/>
        <binding.jms 
            correlationScheme="RequestMsgIDToCorrelID" 
            jndiUrl="vm://localhost" 
            initialContextFactory="org.apache.activemq.jndi.ActiveMQInitialContextFactory">
            <destination name="clientQueue" type="queue" create="never"/>
            <connectionFactory name="connectionFactory" create="never"/>
            <response>
                <destination name="serviceQueue" type="queue" create="never"/>
                <connectionFactory name="connectionFactory" create="never"/>
            </response>
        </binding.jms>
    </reference>
    
    <component name="HelloTest">
        <f3:junit class="org.fabric3.binding.burlap.HelloTest"/>
        <reference name="helloClient" target="HelloClient"/>
    </component>

    <!-- Hello Client -->
    <component name="HelloClient">
        <implementation.java class="org.fabric3.binding.burlap.HelloClientImpl"/>
    </component>

    <!-- Hello Service -->
    <component name="HelloService">
        <implementation.java class="org.fabric3.binding.burlap.HelloServiceImpl"/>
    </component>
</composite>