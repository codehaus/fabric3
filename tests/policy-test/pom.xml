<project>

	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.codehaus.fabric3</groupId>
		<artifactId>fabric</artifactId>
		<version>2</version>
	</parent>
	
	<groupId>org.codehaus.fabric3</groupId>
	<artifactId>policy-test</artifactId>
	<version>0.1-SNAPSHOT</version>
	<name>Fabric3 Policy Test</name>
	<packaging>jar</packaging>
	<description>Fabric3 Policy Test.</description>
	
	<repositories>
	<repository>
	<id>maven2-repository.dev.java.net</id>
	<name>Java.net Repository for Maven</name>
	<url>http://download.java.net/maven/2/</url>
	<layout>default</layout>
</repository>
	</repositories>

	<dependencies>

		<dependency>
			<groupId>org.codehaus.fabric3.spec</groupId>
			<artifactId>sca-api-r1.0</artifactId>
			<version>0.1</version>
            <scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.codehaus.fabric3</groupId>
			<artifactId>fabric3-spi</artifactId>
			<version>0.2-SNAPSHOT</version>
            <scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.codehaus.fabric3.spec</groupId>
			<artifactId>sca-api-r1.0</artifactId>
			<version>0.1</version>
            <scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
            <scope>compile</scope>
		</dependency>

	</dependencies>

	<build>
	
		<defaultGoal>verify</defaultGoal>
		
		<plugins>
		
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>RELEASE</version>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
							<goal>testCompile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>RELEASE</version>
				<executions>
					<execution>
						<goals>
							<goal>resources</goal>
							<goal>testResources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.fabric3</groupId>
				<artifactId>fabric3-itest-plugin</artifactId>
				<configuration>
					<systemScdl>
						file:target/classes/META-INF/testSystem.composite
					</systemScdl>
                    <contributions>
                        <dependency>
                            <groupId>org.codehaus.fabric3</groupId>
                            <artifactId>fabric3-transaction</artifactId>
                            <version>0.1-SNAPSHOT</version>
                        </dependency>
                    </contributions>
                    <extensions>
                        <dependency>
                            <groupId>geronimo-spec</groupId>
                            <artifactId>geronimo-spec-jta</artifactId>
                            <version>1.0.1B-rc4</version>
                        </dependency>
                        <dependency>
                            <groupId>geronimo-spec</groupId>
                            <artifactId>geronimo-spec-j2ee-connector</artifactId>
                            <version>1.5-rc4</version>
                        </dependency>
                        <dependency>
		                    <groupId>jotm</groupId>
                            <artifactId>jotm</artifactId>
                            <version>1.5.3</version>
                        </dependency>
                    </extensions>
                </configuration>
				<executions>
					<execution>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
		
	</build>

</project>
