<!--
    Default system configuration for the launcher environment.

    $Rev$ $Date$
-->
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:system="http://fabric3.org/xmlns/sca/system/2.0-alpha"
           name="org.fabric3.itest.EmbeddedMaven"
           autowire="true">

    <!-- include physical deployment configuration -->
    <include name="org.fabric3.fabric.Common" scdlResource="org/fabric3/fabric/common.scdl"/>

    <!-- include exception formatters  -->
    <include name="org.fabric3.fabric.Formatters" scdlResource="org/fabric3/fabric/formatters.scdl"/>

    <!-- include physical deployment configuration -->
    <include name="org.fabric3.fabric.Physical" scdlResource="org/fabric3/fabric/physical.scdl"/>

    <!-- include loader configuration -->
    <include name="org.fabric3.fabric.Loader" scdlResource="org/fabric3/fabric/loader.scdl"/>

    <!-- include implementation processor configuration -->
    <include name="org.fabric3.fabric.Implementation" scdlResource="org/fabric3/fabric/implementation.scdl"/>

    <!-- Java interface definition language -->
    <include name="org.fabric3.fabric.InterfaceJava" scdlResource="org/fabric3/fabric/interfaceJava.scdl"/>

    <!-- include composite implementation type -->
    <include name="org.fabric3.fabric.Composite" scdlResource="org/fabric3/fabric/composite.scdl"/>

    <!-- Pojo implementation type -->
    <include name="org.fabric3.fabric.PojoImplementation" scdlResource="org/fabric3/fabric/pojoImplementation.scdl"/>

    <!-- System implementation type -->
    <include name="org.fabric3.fabric.SystemImplementation" scdlResource="org/fabric3/fabric/systemImplementation.scdl"/>

    <!-- Java implementation type -->
    <include name="org.fabric3.fabric.JavaImplementation" scdlResource="org/fabric3/fabric/javaImplementation.scdl"/>

    <!-- include deployment configuration -->
    <include name="org.fabric3.fabric.Deployment" scdlResource="org/fabric3/fabric/deployment.scdl"/>

    <!-- include transform configuration -->
    <include name="org.fabric3.transform.Transform" scdlResource="org/fabric3/transform/transform.scdl"/>

    <component name="org.fabric3.itest.implementation.junit.ImplementationJUnitLoader">
        <system:implementation.system class="org.fabric3.itest.implementation.junit.ImplementationJUnitLoader"/>
    </component>

    <component name="org.fabric3.itest.implementation.junit.JUnitComponentTypeLoader">
        <system:implementation.system class="org.fabric3.itest.implementation.junit.JUnitComponentTypeLoader"/>
    </component>

    <component name="jUnitGenerator">
        <system:implementation.system class="org.fabric3.itest.implementation.junit.JUnitComponentGenerator"/>
    </component>

    <component name="jUnitIFProviderBuilder">
        <system:implementation.system class="org.fabric3.itest.implementation.junit.JnitIFProviderBuilder"/>
    </component>

    <component name="org.fabric3.itest.ArtifactRepository">
        <system:implementation.system class="org.fabric3.itest.MavenDelegateArtifactRepository"/>
    </component>

    <!-- no recovery for the iTest runtime   -->
    <component name="assemblyRecoveryService">
        <system:implementation.system class="org.fabric3.fabric.assembly.store.NonPersistentAssemblyStore"/>
    </component>


</composite>
